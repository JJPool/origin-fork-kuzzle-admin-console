#!/usr/bin/env node

var path = require('path')
var rcConf = require('rc')('kuzbo', {
  port: 3000
})
var express = require('express')
var app = express()

app.use(express.static(path.resolve(__dirname, '../dist')))

module.exports = app.listen(rcConf.port, function (err) {
  if (err) {
    console.log(err)
    return
  }
  console.log('Listening at http://localhost:' + rcConf.port + '\n')
})
